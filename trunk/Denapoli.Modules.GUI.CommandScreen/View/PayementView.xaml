<UserControl x:Class="Denapoli.Modules.GUI.CommandScreen.View.PayementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <UserControl.Resources>
  </UserControl.Resources>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" DataContext="{Binding SelectedView, Mode=TwoWay}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Paiement de :"
                       FontSize="40"  
                    FontFamily="fonts/#Arial Narrow Bold" 
                    Margin="50 50 50 50" 
                    TextAlignment="Center"
                       TextWrapping="Wrap"
                       />
            <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:c}}"
                       FontSize="40"  
                    FontFamily="fonts/#Arial Narrow Bold" 
                    Margin="50 50 50 50" 
                    TextAlignment="Center"
                       TextWrapping="Wrap"
                       />
        </StackPanel>
        
        <TextBlock Text="{Binding ScreenMessage}"
                   FontSize="40"  
                    FontFamily="fonts/#Arial Narrow Bold" 
                    Margin="50 50 50 50" 
                    TextAlignment="Center"
                   TextWrapping="Wrap"
                   />
    </StackPanel>
</UserControl>
